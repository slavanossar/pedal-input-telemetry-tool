<UserControl x:Class="PedalTelemetry.PedalBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label -->
        <TextBlock x:Name="LabelText"
                  Grid.Row="0"
                  Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                  Foreground="White" 
                  FontSize="12" 
                  FontWeight="Bold"
                  TextAlignment="Center"
                  Margin="0,0,0,5"/>

        <!-- Bar Container -->
        <Border Grid.Row="1"
               BorderBrush="#404040"
               BorderThickness="2"
               Background="#1E1E1E"
               Margin="10,0">
            <Grid>
                <Rectangle x:Name="FillRect"
                          VerticalAlignment="Bottom"
                          Fill="{Binding BarColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          Height="0"/>
            </Grid>
        </Border>

        <!-- Value Text -->
        <TextBlock x:Name="ValueText" 
                  Grid.Row="2"
                  Text="0" 
                  Foreground="White" 
                  FontSize="14" 
                  TextAlignment="Center"
                  Margin="0,5,0,0"/>
    </Grid>
</UserControl>
