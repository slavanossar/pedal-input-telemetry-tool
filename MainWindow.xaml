<Window x:Class="PedalTelemetry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PedalTelemetry"
        Title="Pedal Input Telemetry" Height="500" Width="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Label Grid.Row="0" Content="TELEMETRY" 
               FontSize="24" FontWeight="Bold" 
               Foreground="#FF0000" 
               HorizontalAlignment="Center" 
               Margin="10"/>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Pedal Bars -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Margin="0,0,20,0">
                <local:PedalBar x:Name="ClutchBar" Label="Clutch" Width="100" Height="300" Margin="5"/>
                <local:PedalBar x:Name="BrakeBar" Label="Brake" Width="100" Height="300" Margin="5"/>
                <local:PedalBar x:Name="ThrottleBar" Label="Throttle" Width="100" Height="300" Margin="5"/>
            </StackPanel>

            <!-- Trace Graph -->
            <local:TraceGraph x:Name="TraceGraph" Grid.Column="1" 
                             Margin="10,0,0,0"/>
        </Grid>

        <!-- Settings Button -->
        <Button Grid.Row="2" Content="Settings" 
                Click="SettingsButton_Click"
                Width="100" Height="30" 
                Margin="10"
                HorizontalAlignment="Right"
                Background="#333333"
                BorderBrush="#555555"
                Foreground="White"
                Cursor="Hand"/>
    </Grid>
</Window>
